<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="match_parent"

    android:backgroundTint="#F0D9D7"
    android:background="#F0D9D7">






    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="409dp"
                android:layout_height="420dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrim"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cvBreakfastRecipeItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.346">


            </androidx.cardview.widget.CardView>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/rectangle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/flKurczakCurry"

                    >

                <TextView
                        android:text="Tajska zupa z dyni"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:id="@+id/tvTitleKurczakCurry"
                        android:gravity="center"
                        android:textSize="34sp"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>


            </FrameLayout>

            <androidx.cardview.widget.CardView
                    android:id="@+id/cvBreakfastRecipeItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivRecipeImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tajskazupazdyni"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/scrim"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/scrim" />


            </androidx.cardview.widget.CardView>

            <TextView
                    android:text="SKŁADNIKI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="20sp"/>

            <TextView
                    android:text="puree z dyni (300g)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textSize="16sp"/>

            <TextView
                    android:text="pomidor (1 sztuka)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="16sp"/>

            <TextView
                    android:text="cebula szalotka (1 sztuka)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="16sp"/>

            <TextView
                    android:text="czosnek (2 sztuki)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="16sp"/>

            <TextView
                    android:text="świeży imbir (5 cm)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="16sp"/>

            <TextView
                    android:text="mleczko kokosowe (5 łyżek)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="16sp"/>


            <TextView
                    android:text="SPOSÓB PRZYGOTOWANIA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textSize="20sp"/>

            <TextView
                    android:text="1. Dynię wydrąż, pokrój na kawałki i upiecz w piekarniku w 180 stopniach C. Wystudzoną dynię zblenduj na puree."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:textSize="16sp"/>

            <TextView
                    android:text="2. W garnku rozpuść olej kokosowy, dodaj liście kafiru, płatki chili, obrany i pokrojony w plastry imbir, czosnek, posiekaną cebulę – smaż przez 1 minutę."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:textSize="16sp"/>

            <TextView
                    android:text="3. Dodaj pokrojonego pomidora, wymieszaj i po minucie dodaj mleczko kokosowe. Przykryj garnek i gotuj na małym ogniu przez ok. 20 minut."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textSize="16sp"/>

            <TextView
                    android:text="4. Przecedź całość przez sito i połącz z puree dyniowym. Podgrzewaj jeszcze przez 5 minut."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:textSize="16sp"/>

            <TextView
                    android:text="5. Dodaj soli, wymieszaj. Na talerzu posyp świeżą kolendrą."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:textSize="16sp"/>





        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

