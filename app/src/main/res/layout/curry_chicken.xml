<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:backgroundTint="#F0D9D7"
    android:background="#F0D9D7">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="409dp"
                android:layout_height="420dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrim"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cvBreakfastRecipeItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.346">


            </androidx.cardview.widget.CardView>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/rectangle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/flKurczakCurry"

                    >

                <TextView
                        android:text="Kurczak curry"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:id="@+id/tvTitleKurczakCurry"
                        android:gravity="center"
                        android:textSize="34sp"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>


            </FrameLayout>

            <androidx.cardview.widget.CardView
                    android:id="@+id/cvBreakfastRecipeItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivRecipeImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/curry"/>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/scrim"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/scrim" />


            </androidx.cardview.widget.CardView>

            <TextView
                    android:text="SKŁADNIKI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="20sp"/>

            <TextView
                    android:text="cebula (2 sztuka)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textSize="16sp"/>

            <TextView
                    android:text="czosnek (1 ząbek)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="16sp"/>

            <TextView
                    android:text="świeży imbir (1 cm)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="16sp"/>

            <TextView
                    android:text="papryka żółta (0,5 sztuki)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="16sp"/>

            <TextView
                    android:text="papryczka chilli (0,25 sztuki)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="16sp"/>

            <TextView
                    android:text="świeża kolendra (kilka listków)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="16sp"/>

            <TextView
                    android:text="miód (0,5 łyżeczki)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="16sp"/>

            <TextView
                    android:text="kurkuma (0,5 łyżyczki)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="16sp"/>

            <TextView
                    android:text="curry w proszku (0,5 łyżeczki)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="16sp"/>

            <TextView
                    android:text="udko z kurczaka (1 sztuka)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="16sp"/>

            <TextView
                    android:text="oliwa z oliwek (1 łyżeczka)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textSize="16sp"/>

            <TextView
                    android:text="ciecierzyca gotowana (50g)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textSize="16sp"/>

            <TextView
                    android:text="koncentrat pomidorowy (1 łyżeczka)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textSize="16sp"/>

            <TextView
                    android:text="ryż brązowy (40g)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textSize="16sp"/>

            <TextView
                    android:text="sól"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView222"
                    android:textSize="16sp"/>

            <TextView
                    android:text="pieprz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView223"
                    android:textSize="16sp"/>
            <TextView
                    android:text="SPOSÓB PRZYGOTOWANIA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textSize="20sp"/>

            <TextView
                    android:text="1. Obierz cebulę, czosnek i imbir."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:textSize="16sp"/>

            <TextView
                    android:text="2. Z papryk usuń gniazda nasiennie."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:textSize="16sp"/>

            <TextView
                    android:text="3. Zmiksuj na pastę 1 cebulę, 1 paprykę, czosnek, imbir, papryczkę chili, kolendrę, miód i przyprawy."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textSize="16sp"/>

            <TextView
                    android:text="4. W dużym garnku rozgrzej oliwę i obsmaż z każdej strony udka, do zarumienienia."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:textSize="16sp"/>

            <TextView
                    android:text="5. Mięso przełóż na talerz, a do garnka wrzuć pokrojoną w kostkę pozostałą cebulę i paprykę."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:textSize="16sp"/>

            <TextView
                    android:text="6. Na patelnię dodaj przygotowaną pastę z warzyw i smaż około 5 minut."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:textSize="16sp"/>

            <TextView
                    android:text="7. Wlej 2 szklanki wody. Dodaj ciecierzycę i koncentrat pomidorowy. Dopraw solą i pieprzem."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:textSize="16sp"/>

            <TextView
                    android:text="8. Dodaj obsmażonego kurczaka, przykryj pokrywką i gotuj około 45 minut, na wolnym ogniu."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25"
                    android:textSize="16sp"/>

            <TextView
                    android:text="9. W międzyczasie ugotuj ryż."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26"
                    android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>