<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:backgroundTint="#F0D9D7"
        android:background="#F0D9D7">
    <FrameLayout
            android:layout_width="329dp"
            android:layout_height="153dp"
            android:background="@drawable/rectangle"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/flSnacks">

        <TextView
                android:text="Przekąski"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:id="@+id/tvTitleSnacks"
                android:gravity="center"
                android:textSize="34sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        <TextView
                android:text="Znajdź przepis na przekąskę."
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:id="@+id/tvDesSnacks"
                android:gravity="bottom|center"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:textStyle="normal"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="409dp"
            android:layout_height="564dp"
            app:layout_constraintTop_toBottomOf="@id/flSnacks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>