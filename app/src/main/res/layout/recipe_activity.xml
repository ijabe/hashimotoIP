<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#F0D9D7"
        android:background="#F0D9D7">

    <FrameLayout
            android:layout_width="329dp"
            android:layout_height="153dp"
            android:background="@drawable/rectangle"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/llrecipell"
            android:id="@+id/flBreakfast">

        <TextView
                android:text="Przepisy"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:id="@+id/tvTitleBreakfast"
                android:gravity="center"
                android:textSize="34sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        <TextView
                android:text="Znajdź przepis na posiłek."
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:id="@+id/tvDesBreakast"
                android:gravity="bottom|center"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:textStyle="normal"
                />

    </FrameLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="564dp"
            app:layout_constraintTop_toBottomOf="@+id/flBreakfast"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/llrecipell">
        <androidx.cardview.widget.CardView
                android:id="@+id/cvBreakfastRecipeItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRecipeImage"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tajskazupazdyni"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/scrim"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scrim" />
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitleRecipe1"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle2"
                    android:elevation="12dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:maxWidth="250dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Tajska zupa z dyni"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cvBreakfastRecipeItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRecipeImage2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rybawpapilocie"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/scrim2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scrim" />
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitleRecipe2"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle2"
                    android:elevation="12dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:maxWidth="250dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Ryba w papilocie"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cvBreakfastRecipeItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRecipeImage1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/curry"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/scrim1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/scrim" />
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitleRecipe3"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle2"
                    android:elevation="12dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:maxWidth="250dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Kurczak curry"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>